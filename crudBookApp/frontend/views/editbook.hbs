{{>navbar}}
{{>navbarend}}

<section class="my-5 container">
     {{#unless book}}
    <div class="alert alert-danger">
        Invalid book id
    </div>

    {{else}}
    <h4>Edit Book</h4>
    <hr/>

    <form class="row g-3" method="post">
        <div class="col-12">
            <label for="id" class="form-label">Book ID</label>
            <input name="id" type="text" class="form-control" id="id" value="{{book.id}}" disabled>
        </div>
        <div class="col-12">
            <label for="name" class="form-label">Book Name</label>
            <input name="name" type="text" class="form-control" id="name" value="{{book.name}}">
        </div>
        <div class="col-12">
            <label for="author" class="form-label">Author</label>
            <input name="author" type="text" class="form-control" id="author"  value="{{book.author}}">
        </div>
        <div class="col-md-6">
            <label for="type" class="form-label">Type</label>
            <input name="type" type="text" class="form-control" id="type"  value="{{book.type}}"> 
        </div>
        <div class="col-md-6">
            <label for="pages" class="form-label">Pages</label>
            <input name="pages" type="number" class="form-control" id="pages"  value="{{book.pages}}">
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
    {{/unless}}
</section>


{{>footer}}